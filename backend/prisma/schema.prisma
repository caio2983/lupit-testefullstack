generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model team {
  id         Int       @id @default(autoincrement())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}

model player {
  id         Int       @id @default(autoincrement())
  name       String
  age        Int
  team_id    Int


  @@index([team_id])
  @@foreignKey([team_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
}